<UserControl x:Class="KCPicker.GUI.Controls.ColorLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KCPicker.GUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid Background="{Binding BackgroundColor, Mode=OneWay}">
        <TextBox
            Style="{DynamicResource SelectableTextBlock}"
            Text="{Binding ColorName, Mode=OneWay}"
            Foreground="{Binding ForegroundColor, Mode=OneWay}"/>
    </Grid>
</UserControl>
