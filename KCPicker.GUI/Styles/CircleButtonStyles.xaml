<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:KCPicker.GUI.Styles">
    <Style
        x:Key="CircleButtonRectangle"
        TargetType="Rectangle">

        <Setter
            Property="Width" 
            Value="10" />

        <Setter
            Property="Height" 
            Value="10" />
    </Style>

    <Style
        x:Key="CircleButton"
        TargetType="Button"
        BasedOn="{StaticResource MetroCircleButtonStyle}">

        <Setter
            Property="Width" 
            Value="27" />

        <Setter
            Property="Height" 
            Value="27" />

        <Setter
            Property="Background"
            Value="White" />
    </Style>
</ResourceDictionary>